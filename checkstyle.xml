<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name = "Checker">
    <module name="TreeWalker">
        <module name="UnusedImports" />
        <module name="RedundantImport"/>  <!--Checks for redundant (e.g duplicate) imports -->
        <module name="AvoidDoubleBraceInitialization"/> <!-- Avoid double bracket initialisation -->
        <module name="AvoidInlineConditionals"/> <!-- No in-line conditionals -->
        <module name="EmptyStatement"/> <!-- Detects empty statement(e.g ; after if) -->
        <module name="NestedIfDepth">    <!-- Maximum 3 nested if's -->
        <property name="max" value="3"/>
        </module>
        <module name="NestedForDepth"> <!-- Maximum 2 nested for loops-->
            <property name="max" value="2"/>
        </module>


    </module>



    <!-- TODO: decide in your team with other checkers to add! -->

</module>